<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
         ToolsVersion="15"
         DefaultTargets="Default">

  <PropertyGroup>
    <Configuration Condition="'$(Configuration)' == ''">Debug</Configuration>
    <SolutionDir Condition=" '$(SolutionDir)' == ''">..\..\</SolutionDir>
  </PropertyGroup>

  <ItemGroup>
    <BuildArtifactsDir Include="..\artifacts\" />
    <TestArtifactsDir Include="..\..\..\..\artifacts\" />	
    <PackageOutputDir Include="..\artifacts\packages" />
    <Solutionfile Include="..\PerfIt.sln" />
    <AppProjFiles Include="..\src\**\*.csproj" />
    <TestProjFiles Include="..\test\**\*.csproj" />
    <ScriptsDir Include="..\scripts\" />
    <NugetExeDir Include=".\" />
    <TestRunnerFilePattern Include="..\packages\xunit.runner.console.2.3.1\tools\net452\*.*" />
  </ItemGroup>

  <Target Name="Default" DependsOnTargets="Restore; Compile; Test; Package" />
  <Target Name="DefaultCI" DependsOnTargets="Restore; Compile; Test; Package; Publish" /> 
  
  <Target Name="Restore">
    <Exec Command="nuget.exe restore ..\PerfIt.sln" />
  </Target>  
  <Target Name="Clean">
    <RemoveDir Directories="@(BuildArtifactsDir)" />
  </Target>
  <Target Name="Init" DependsOnTargets="Clean">
    <MakeDir Directories="@(BuildArtifactsDir);@(PackageOutputDir)" />
  </Target>
  <Target Name="Compile" DependsOnTargets="Init">
    <MSBuild Projects="@(AppProjFiles)" Targets="Rebuild" Properties="OutDir=%(BuildArtifactsDir.FullPath);Configuration=$(Configuration);SolutionDir=$(SolutionDir)" />
    <MSBuild Projects="@(TestProjFiles)" Targets="Rebuild" Properties="OutDir=%(BuildArtifactsDir.FullPath);Configuration=$(Configuration);SolutionDir=$(SolutionDir)" />
	</Target>
  <Target Name="Test">
    <Copy  SourceFiles="@(TestRunnerFilePattern)" DestinationFolder="@(BuildArtifactsDir)" />  
    <Exec WorkingDirectory="%(BuildArtifactsDir.FullPath)" Command="xunit.console.exe PerfIt.Tests.dll -verbose" />
    <Exec WorkingDirectory="%(BuildArtifactsDir.FullPath)" Command="xunit.console.exe PerfIt.WebApi.Tests.dll -verbose" />
    <Exec WorkingDirectory="%(BuildArtifactsDir.FullPath)" Command="xunit.console.exe PerfIt.Castle.Interception.Tests.dll -verbose" />
    <Exec WorkingDirectory="%(BuildArtifactsDir.FullPath)" Command="xunit.console.exe PerfIt.Zipkin.Tests.dll -verbose" />
  </Target>  
  <Target Name="Package">
    <Exec WorkingDirectory="%(NugetExeDir.FullPath)" Command="nuget.exe pack ..\src\PerfIt\PerfIt.csproj -Build -OutputDirectory ..\artifacts\packages" />
    <Exec WorkingDirectory="%(NugetExeDir.FullPath)" Command="nuget.exe pack ..\src\PerfIt.WebApi\PerfIt.WebApi.csproj -Build -OutputDirectory ..\artifacts\packages" />
    <Exec WorkingDirectory="%(NugetExeDir.FullPath)" Command="nuget.exe pack ..\src\PerfIt.Castle.Interception\PerfIt.Castle.Interception.csproj -Build -OutputDirectory ..\artifacts\packages" />	
    <Exec WorkingDirectory="%(NugetExeDir.FullPath)" Command="nuget.exe pack ..\src\PerfIt.Mvc\PerfIt.Mvc.csproj -Build -OutputDirectory ..\artifacts\packages" />	
    <Exec WorkingDirectory="%(NugetExeDir.FullPath)" Command="nuget.exe pack ..\src\PerfIt.Zipkin\PerfIt.Zipkin.csproj -Build -OutputDirectory ..\artifacts\packages" />	
    <Exec WorkingDirectory="%(NugetExeDir.FullPath)" Command="nuget.exe pack ..\src\PerfIt.Zipkin.EventHub\PerfIt.Zipkin.EventHub.csproj -Build -OutputDirectory ..\artifacts\packages" />	
  </Target>
  <Target Name="Publish">
    <Exec WorkingDirectory="%(ScriptsDir.FullPath)" Command="powershell -file .\publish.ps1" />
  </Target>

</Project>